{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "jsx": "react-jsxdev",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "typeRoots": ["./styles", "./node_modules/@types"],
    "paths": {
      "sources/*": ["sources/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": [
    "sources/**/*"
  ],
  "exclude": [
    "*.test.js"
  ]
}

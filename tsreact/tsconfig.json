{
  "compilerOptions": {
    "noEmit": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsxdev",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./styles",
      "./node_modules/@types"
    ]
  }
}
